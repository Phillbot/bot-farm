{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@telegram/*": ["telegram/*"],
      "@server/*": ["server/*"],
      "@utils/*": ["utils/*"],
      "@common/*": ["common/*"],
    },
  },
  "include": ["./src/**/*", "declaration.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
}
