{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@telegram/*": ["telegram/*"],
      "@server/*": ["server/*"],
      "@utils/*": ["utils/*"],
      "@common/*": ["common/*"],
      "@database/*": ["database/*"],
      "@config/*": ["config/*"],
      "@cron-jobs/*": ["cron-jobs/*"],
    },
  },
  "include": ["./src/**/*", "declaration.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
}
