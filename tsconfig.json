{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@telegram": ["telegram"],
      "@telegram/*": ["telegram/*"],
      "@server": ["server"],
      "@server/*": ["server/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],
      "@common": ["common"],
      "@common/*": ["common/*"],
      "@database": ["database"],
      "@database/*": ["database/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@cron-jobs": ["cron-jobs"],
      "@cron-jobs/*": ["cron-jobs/*"],
    },
  },
  "include": ["./src/**/*", "src/@types/**/*.d.ts", "declaration.d.ts"],
  "exclude": ["node_modules", "helpers/copy-dir.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
}
